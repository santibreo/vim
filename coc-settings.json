{
    // globals
    "coc.preferences.formatOnSaveFiletypes": [
        "css",
        "markdown",
        "javascript",
        "graphql",
        "html",
        "yaml",
        "json"
    ],
    // diagnosis
    "diagnostic-languageserver.enable": true,
    "diagnostic.errorSign": "xx",
    "diagnostic.warningSign": "!!",
    "diagnostic.infoSign": ">>",
    "diagnostic.hintSign": "--",
    "diagnostic-languageserver.filetypes": {
        "vim": "vint",
        "tex": ["proselint", "write-good", "grammarous"],
        "python": "pylint",
        "text": ["proselint", "grammarous"]
    },
    "diagnostic-languageserver.formatFiletypes": {
        "python": ["black", "isort"],
        "sh": "shfmt"
    },
    "diagnostic-languageserver.linters": {
        "proselint": {
            "command": "proselint",
            "isStdout": true,
            "isStderr": false,
            "debounce": 100,
            "args": ["-"],
            "offsetLine": 0,
            "offsetColumn": 0,
            "sourceName": "proselint",
            "formatLines": 1,
            "formatPattern": [
                "^[^:]+:(\\d+):(\\d+):(\\s)(.*)$",
                {
                    "line": 1,
                    "column": 2,
                    "security": 3,
                    "message": 4
                }
            ],
            "securities": {
                " ": "info"
            }
        }
    },
    // suggestions
    "suggest.minTriggerInputLength": 2,
    "suggest.snippetIndicator": "[+]",
    "suggest.removeDuplicateItems": true,
    "suggest.detailField": "preview",
    "suggest.labelMaxLength": 50,
    "suggest.enablePreview": true,
    "suggest.maxCompleteItemCount": 15,
    // python config
    "python.venvPath": "C:/Users/n230104/.virtualenvs",
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "C:/Users/n230104/AppData/Local/Programs/Python/Python37/Scripts/black",
    "python.formatting.blackArgs": [
        "-l 80"
    ],
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintPath": "C:/Users/n230104/AppData/Local/Programs/Python/Python37/Scripts/pylint",
    "python.linting.pylintArgs": [
        "--disable=F0401"
    ],
    // Code Snippets
    "snippets.ultisnips.enable": true,
    "snippets.ultisnips.directories": [
        "ultisnips"
    ]
    //"snippets.userSnippetsDirectory": "C:/Users/n230104/AppData/Local/nvim/ultisnips"
}
